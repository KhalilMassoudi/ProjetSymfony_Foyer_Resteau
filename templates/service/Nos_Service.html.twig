{% extends 'basefront.html.twig' %}


{% block title %}Nos Services{% endblock %}

{% block amodifier %}
<div class="container mt-5">
    <h2 class="text-center">Nos Services</h2>
    <div class="row">
        {% for service in services %}
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">{{ service.nom }}</h5>
                        <p class="card-text">{{ service.description }}</p>
                        {% if service.dateCreation %}
                            <p class="card-text"><small class="text-muted">Ajout√© le {{ service.dateCreation|date('d/m/Y') }}</small></p>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-center">Aucun service disponible pour le moment.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}