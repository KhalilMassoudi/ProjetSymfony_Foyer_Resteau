{% extends 'baseback2.html.twig' %}

{% block body %}
<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Hi, welcome back Khalil!</h4>
                    <p class="mb-0">Your Services dashboard is Ready</p>
                </div>
            </div>
        </div>
        {# navbar Gestion service#}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('app_service') }}">Service <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_type_service') }}">Types Services</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Demandes</a>
                </li>
            </div>
        </nav>
        {# Class service #}
        <div class="card mt-4">
            <div class="card-header">
                <h4 class="card-title">List of Services</h4>
                <h4 class="card-title d-flex justify-content-between">
                    <button id="toggleFormBtn" class="btn btn-primary">Add</button>
                </h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                <table class="table student-data-table m-t-20">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Date Creation</th>
                        <th>End Date</th>
                        <th>Action 1</th>
                        <th>Action 2</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for s in service %}
                        <tr>
                            <td>{{ s.nom }}</td>
                            <td>{{ s.dateCreation|date('Y-m-d') }}</td>
                            <td>{{ s.dateFin|date('Y-m-d') }}</td>
                            {#<td>
                                <a href="{{ path('app_updateservice', {'id': s.id}) }}"class="btn btn-primary" id="modifierService" >modifier</a>
                            </td>#}
                            <td>
                                <a href="{{ path('app_ServiceSupprim', {'id': s.id}) }}"class="btn btn-danger">supprimer</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">No services found.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                </div>
            </div>
            <div class="card-body">
                <div id="ajouterServiceDiv" class="d-none">
                <h4>Ajouter un service</h4>
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                <div class="row mb-3">
                    <label for="{{ form.nom.vars.id }}" class="col-md-3 col-form-label text-primary">Nom</label>
                    <div class="col-md-9">
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="{{ form.date_creation.vars.id }}" class="col-md-3 col-form-label text-primary">Date de Création</label>
                    <div class="col-md-9">
                        {{ form_widget(form.date_creation, {'attr': {'class': 'form-control', 'placeholder': 'Date de Création'}}) }}
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="{{ form.date_fin.vars.id }}" class="col-md-3 col-form-label text-primary">Date de Fin</label>
                    <div class="col-md-9">
                        {{ form_widget(form.date_fin, {'attr': {'class': 'form-control', 'placeholder': 'Date de Fin'}}) }}
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="{{ form.description.vars.id }}" class="col-md-3 col-form-label text-primary">Description</label>
                    <div class="col-md-9">
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
                    </div>
                </div>

                <button type="submit" class="btn btn-success">Ajouter</button>
                <button type="reset" class="btn btn-secondary">Reset</button>

                {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block footer %}
<div class="footer">
    <div class="copyright">
        <p>Copyright © Designed &amp; Developed by <a href="#" target="_blank">Quixkit</a> 2019</p>
        <p>Distributed by <a href="https://themewagon.com/" target="_blank">Themewagon</a></p>
    </div>
</div>
{% endblock %}
{% block js %}
<script src="{{ asset('assets/back/vendor/global/global.min.js') }}"></script>
<script src="{{ asset('assets/back/js/quixnav-init.js') }}"></script>
<script src="{{ asset('assets/back/js/custom.min.js') }}"></script>

<script src="{{ asset('assets/back/vendor/chartist/js/chartist.min.js') }}"></script>

<script src="{{ asset('assets/back/vendor/moment/moment.min.js') }}"></script>
<script src="{{ asset('assets/back/vendor/pg-calendar/js/pignose.calendar.min.js') }}"></script>

<script src="{{ asset('assets/back/js/dashboard/dashboard-2.js') }}"></script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const toggleFormBtn = document.getElementById('toggleFormBtn');
        const toggleFormBtn1 = document.getElementById('toggleFormBtn1');
        const ajouterServiceDiv = document.getElementById('ajouterServiceDiv');
        const modifierService = document.getElementById('modifierService');
        toggleFormBtn.addEventListener('click', () => {
            ajouterServiceDiv.classList.toggle('d-none');
        });
        modifierService.addEventListener('click', () => {
            ajouterTypeServiceDiv.classList.toggle('d-none');
        });
    });
</script>

{% endblock %}