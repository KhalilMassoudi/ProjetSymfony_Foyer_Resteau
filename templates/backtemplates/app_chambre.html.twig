{% extends 'backtemplates/baseback2.html.twig' %}

{% block title %}
    Gestion des chambres
{% endblock %}

{% block body %}
    <div class="container mt-4" style="margin-left: 20%; margin-top: 400px;padding-top: 80px;">
        <h1>Gestion des chambres</h1>

        {# Affichage des messages flash pour les erreurs #}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger solid alert-rounded">
                <strong>Erreur!</strong> {{ message }}
            </div>
        {% endfor %}

        {# Affichage des messages flash pour les succès #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success solid alert-rounded">
                <strong>Succès!</strong> {{ message }}
            </div>
        {% endfor %}

        {# Bouton pour afficher/masquer le formulaire d'ajout de chambre #}
        <button id="toggleFormBtn" class="btn btn-primary mb-4">
            Ajouter une chambre <span class="btn-icon-right"><i class="fa fa-plus"></i></span>
        </button>

        {# Formulaire pour ajouter une nouvelle chambre #}
        <div id="ajouterChambreDiv" class="d-none">
            <h2>Ajouter une chambre</h2>
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="mb-3">
                <label for="{{ form.numeroChB.vars.id }}" class="form-label">{{ form.numeroChB.vars.label }}</label>
                {{ form_widget(form.numeroChB, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                <label for="{{ form.etageChB.vars.id }}" class="form-label">{{ form.etageChB.vars.label }}</label>
                {{ form_widget(form.etageChB, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                <label for="{{ form.capaciteChB.vars.id }}" class="form-label">{{ form.capaciteChB.vars.label }}</label>
                {{ form_widget(form.capaciteChB, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                <label for="{{ form.statutChB.vars.id }}" class="form-label">{{ form.statutChB.vars.label }}</label>
                {{ form_widget(form.statutChB, {'attr': {'class': 'form-control'}}) }}
            </div>

            {# Champ pour insérer une image #}
            <div class="mb-3">
                <label for="{{ form.image.vars.id }}" class="form-label">Image de la chambre</label>
                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
            </div>

            {# Champ pour le prix de la chambre #}
            <div class="mb-3">
                <label for="{{ form.prixChB.vars.id }}" class="form-label">Prix</label>
                {{ form_widget(form.prixChB, {'attr': {'class': 'form-control'}}) }}
            </div>

            <button type="submit" class="btn btn-success">
                Ajouter <span class="btn-icon-right"><i class="fa fa-check"></i></span>
            </button>
            {{ form_end(form) }}
        </div>

        {# Liste des chambres #}
        <h2 class="mt-4">Liste des chambres</h2>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Numéro</th>
                <th>Étage</th>
                <th>Capacité</th>
                <th>Statut</th>
                <th>Prix</th>  <!-- Colonne pour afficher le prix -->
                <th>Image</th> <!-- Colonne pour afficher l'image -->
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for chambre in chambres %}
                <tr>
                    <td>{{ chambre.id }}</td>
                    <td>
                        <div class="badge-circle">
                            <a href="javascript:void()" class="badge badge-outline-primary">{{ chambre.numeroChB }}</a>
                        </div>
                    </td>
                    <td>{{ chambre.etageChB }}</td>
                    <td>{{ chambre.capaciteChB }}</td>
                    <td>
                        {% set statut = chambre.statutChB.getValue()|trim|lower %}
                        {% if statut == 'disponible' %}
                            <button type="button" class="btn btn-facebook">
                                Disponible <span class="btn-icon-right"><i class="fa fa-check"></i></span>
                            </button>
                        {% elseif statut == 'occupée' %}
                            <button type="button" class="btn btn-twitter">
                                Occupée <span class="btn-icon-right"><i class="fa fa-times"></i></span>
                            </button>
                        {% elseif statut == 'en maintenance' %}
                            <button type="button" class="btn btn-youtube">
                                En maintenance <span class="btn-icon-right"><i class="fa fa-wrench"></i></span>
                            </button>
                        {% else %}
                            <button type="button" class="btn btn-secondary">
                                Inconnu <span class="btn-icon-right"><i class="fa fa-question"></i></span>
                            </button>
                        {% endif %}
                    </td>
                    <td>{{ chambre.prixChB }} €</td>  <!-- Affichage du prix de la chambre -->
                    <td>
                        {% if chambre.image is not null %}
                            <img src="{{ asset('uploads/images/' ~ chambre.image) }}" alt="Image de la chambre" width="50" height="50">
                        {% else %}
                            <span>Aucune image</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_chambre_edit', {'id': chambre.id}) }}" class="btn btn-primary btn-sm mr-3">
                            <i class="fa fa-edit"></i> Modifier
                        </a>
                        <a href="{{ path('app_chambre_delete', {'id': chambre.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette chambre ?');">
                            <i class="fa fa-trash"></i> Supprimer
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block js %}
    <script src="{{ asset('assets/back/vendor/global/global.min.js') }}"></script>
    <script src="{{ asset('assets/back/js/quixnav-init.js') }}"></script>
    <script src="{{ asset('assets/back/js/custom.min.js') }}"></script>
    <script src="{{ asset('assets/back/vendor/chartist/js/chartist.min.js') }}"></script>
    <script src="{{ asset('assets/back/vendor/moment/moment.min.js') }}"></script>
    <script src="{{ asset('assets/back/vendor/pg-calendar/js/pignose.calendar.min.js') }}"></script>
    <script src="{{ asset('assets/back/js/dashboard/dashboard-2.js') }}"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const toggleFormBtn = document.getElementById('toggleFormBtn');
            const ajouterChambreDiv = document.getElementById('ajouterChambreDiv');

            if (toggleFormBtn && ajouterChambreDiv) {
                toggleFormBtn.addEventListener('click', () => {
                    ajouterChambreDiv.classList.toggle('d-none');
                });
            }
        });
    </script>
{% endblock %}
