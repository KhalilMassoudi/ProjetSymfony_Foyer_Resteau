{% extends 'basefront.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <section class="py-5">
        <div class="container-fluid">
            <!-- Background and container styling -->
            <div class="bg-secondary py-5 my-5 rounded-5" style="background: url('images/bg-leaves-img-pattern.png') no-repeat;">
                <div class="container my-5">
                    <div class="row">
                        <!-- Section d'information -->
                        <div class="col-md-6 p-5">
                            <div class="section-header">
                                <h2 class="section-title display-4">
                                    Réinitialisez votre <span class="text-primary">mot de passe</span>
                                </h2>
                            </div>
                            <p>
                                Entrez votre adresse email, et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                            </p>
                        </div>

                        <!-- Formulaire de réinitialisation -->
                        <div class="col-md-6 p-5">
                            {% for flash_error in app.flashes('reset_password_error') %}
                                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                            {% endfor %}

                            {{ form_start(requestForm) }}
                            <!-- Champ Email -->
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                {{ form_widget(requestForm.email, {
                                    'attr': {'class': 'form-control form-control-lg', 'placeholder': 'abc@mail.com'}
                                }) }}
                            </div>

                            <!-- Option Newsletter (si nécessaire, ou supprimez si inutile) -->
                            <div class="form-check form-check-inline mb-3">
                                <input class="form-check-input" type="checkbox" id="newsletter" value="subscribe">
                                <label class="form-check-label" for="newsletter">
                                    S'abonner à notre newsletter
                                </label>
                            </div>

                            <!-- Bouton de soumission -->
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-dark btn-lg">
                                    Envoyer le lien de réinitialisation
                                </button>
                            </div>
                            {{ form_end(requestForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
