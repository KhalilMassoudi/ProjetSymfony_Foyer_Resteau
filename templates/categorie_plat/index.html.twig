{% extends 'backtemplates/gestionRestau.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h1>Categories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.nomCategorie }}</td>
                    <td>{{ categorie.descrCategorie }}</td>
                    <td>
                        <a href="{{ path('app_categorie_plat_show', { id: categorie.id }) }}" class="btn btn-info btn-sm">View</a>
                        <a href="{{ path('app_categorie_plat_edit', { id: categorie.id }) }}" class="btn btn-warning btn-sm">Edit</a>

                        <!-- Formulaire pour la suppression de la catégorie -->
                        <form action="{{ path('app_categorie_plat_delete', {'id': categorie.id}) }}" method="post" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No categories found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categorie_plat_new') }}" class="btn btn-success">Create New Category</a>
{% endblock %}
