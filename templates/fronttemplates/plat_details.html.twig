{% extends 'basefront.html.twig' %}
{% block amodifier %}
<div class="row">
<h2 class="section-title">Liste des plats </h2>
    {% for plat in plats %}
    <div class="col-md-4 mb-4">
        <article class="post-item card border-0 shadow-sm p-3">
            <div class="image-holder zoom-effect">
                <a href="#">
                    <!-- Static image for plats -->
                                <img src="{{ asset('assets/front/images/OIP.jpg') }}"
                                     alt="post" class="c
                                     ard-img-top">
                </a>
            </div>
            <div class="card-body">
                <div class="post-meta d-flex text-uppercase gap-3 my-2 align-items-center">
                    <div class="meta-date">
                        <svg width="16" height="16"><use xmlns:xlink:href="#calendar"></use></svg>
                        <!-- Example placeholder date -->
                        {{ "now"|date("d M Y") }}
                    </div>
                    <div class="meta-categories">
                        <svg width="16" height="16"><use xmlns:xlink:href="#category"></use></svg>
                        {{ plat.typeCuisine }}
                    </div>
                </div>
                <div class="post-header">
                    <h3 class="post-title">
                        <a href="#" class="text-decoration-none">
                            {{ plat.nomPlat }}
                        </a>
                    </h3>
                    <p>{{ plat.descPlat ?: "Aucune description disponible" }}</p>
                    <p><strong>Prix:</strong> {{ plat.prixPlat }} €</p>
                    <p><strong>Disponible:</strong> 
                        {{ plat.dispoPlat ? "Oui" : "Non" }}
                    </p>
                    {% if plat.categoriePlat %}
                    <p><strong>Catégorie:</strong> {{ plat.categoriePlat.nomCategorie }}</p>
                    {% else %}
                    <p><strong>Catégorie:</strong> Aucune</p>
                    {% endif %}
                </div>
            </div>
        </article>
    </div>
    {% endfor %}
</div>
{% endblock %}
