{% extends 'basefront.html.twig' %}

{% block amodifier %}
    <div class="container mt-5">
        <div class="d-flex justify-content-end mb-4">
            <form class="d-flex" method="get" action="{{ path('app_front_chambre') }}">
                <input class="form-control me-2" type="search" name="numeroChB" value="{{ searchTerms.numeroChB }}" placeholder="Rechercher par numéro de chambre..." aria-label="Search">
                <input class="form-control me-2" type="search" name="etageChB" value="{{ searchTerms.etageChB }}" placeholder="Rechercher par étage..." aria-label="Search">
                <input class="form-control me-2" type="search" name="capaciteChB" value="{{ searchTerms.capaciteChB }}" placeholder="Rechercher par capacité..." aria-label="Search">
                <input class="form-control me-2" type="search" name="statutChB" value="{{ searchTerms.statutChB }}" placeholder="Rechercher par statut..." aria-label="Search">
                <input class="form-control me-2" type="search" name="prixChB" value="{{ searchTerms.prixChB }}" placeholder="Rechercher par prix..." aria-label="Search">
                <button class="btn btn-primary" type="submit">Rechercher</button>
            </form>

        </div>
        <h2 class="section-title text-center mb-4">Liste des Chambres</h2>

        {% if chambres is not empty %}
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
                {% for chambre in chambres %}
                    <div class="col">
                        <div class="card h-100 border-0 shadow-lg rounded">
                            <!-- Image de la chambre -->
                            <div class="image-holder">
                                <a href="{{ path('app_front_chambre', {'id': chambre.id}) }}">
                                    <img src="{{ chambre.image ? asset('uploads/images/' ~ chambre.image) : asset('images/default-room.jpg') }}"
                                         alt="Image de la chambre" class="card-img-top rounded-top">
                                </a>
                            </div>

                            <!-- Contenu de la carte -->
                            <div class="card-body d-flex flex-column justify-content-between">
                                <h5 class="card-title text-center">Chambre {{ chambre.numeroChB }}</h5>
                                <p class="text-center"><strong>Prix :</strong> {{ chambre.prixChB }} €</p>

                                <!-- Statut -->
                                <div class="d-flex justify-content-center">
                                    <p class="text-center">
                                        <strong>Statut :</strong>
                                        {% if chambre.statutChB == constant('App\\Enum\\ChambreStatut::DISPONIBLE') %}
                                            <span class="badge bg-success">Disponible</span>
                                        {% elseif chambre.statutChB == constant('App\\Enum\\ChambreStatut::OCCUPEE') %}
                                            <!-- Badge Occupée avec une couleur plus claire -->
                                            <span class="badge" style="background-color: #f8d7da; color: #721c24;">Occupée</span>
                                        {% elseif chambre.statutChB == constant('App\\Enum\\ChambreStatut::EN_MAINTENANCE') %}
                                            <!-- Badge En Maintenance avec une couleur plus claire -->
                                            <span class="badge" style="background-color: #d6d8d9; color: #383d41;">En maintenance</span>
                                        {% else %}
                                            <span class="badge bg-warning">Statut inconnu</span>
                                        {% endif %}
                                    </p>
                                </div>

                                <!-- Ajout de l'icône de cœur en lien avec le SVG -->
                                <div class="text-center mt-3">
                                    <a href="#" class="btn btn-light" title="Ajouter aux favoris">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                                            <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143q.09.083.176.171a3 3 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15"/>
                                        </svg>
                                    </a>
                                </div>

                                <!-- Bouton Voir les détails -->
                                <div class="text-center mt-3">
                                    <a href="{{ path('app_front_chambre', {'id': chambre.id}) }}" class="btn btn-primary">
                                        Voir les détails
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="text-center">
                <p class="text-muted">Aucune chambre n'est disponible pour le moment.</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
