{% extends 'fronttemplates/basefront.html.twig' %}
{% block body %}
    {% if user_id is not null and username is not null %}
        <h1>Bienvenue, {{ username }} !</h1>
        <p>Votre ID utilisateur est : {{ user_id }}</p>

        <form action="{{ path('app_logout') }}" method="post">
            <button type="submit">Se déconnecter</button>
        </form>
    {% else %}
        <h1>Bienvenue sur notre page d'accueil</h1>
        <p>Veuillez vous connecter ou vous inscrire pour accéder à plus de fonctionnalités.</p>
        <a href="{{ path('app_login') }}">Se connecter</a>
        <a href="{{ path('app_register') }}">Créer un compte</a>
    {% endif %}
{% endblock %}